{
  "name": "Auction House",
  "description": "You run an auction house specializing in rare collectibles. Source items, set reserves, manage bidders, and build your reputation as the premier auctioneer.",
  "states": [
    {
      "name": "showroom",
      "description": "Your main gallery. Display cases line the walls.",
      "onEnter": []
    },
    {
      "name": "sourcing",
      "description": "Searching estate sales and private collections for treasures.",
      "onEnter": [{ "resource": "inventory", "operation": "+", "value": "random(1,3)" }]
    },
    {
      "name": "appraisal",
      "description": "Examining an item under bright lights with magnifying tools.",
      "onEnter": [{ "resource": "expertise", "operation": "+", "value": "random(1,3)" }]
    },
    {
      "name": "live_auction",
      "description": "The gavel is ready. Bidders fill the room.",
      "onEnter": [{ "resource": "excitement", "operation": "+", "value": "random(3,8)" }]
    },
    {
      "name": "private_sale",
      "description": "A wealthy collector wants to deal behind closed doors.",
      "onEnter": []
    },
    {
      "name": "forgery_scandal",
      "description": "Someone claims an item you sold is fake.",
      "onEnter": [{ "resource": "reputation", "operation": "-", "value": "random(5,10)" }]
    }
  ],
  "initialState": "showroom",
  "resources": {
    "capital": { "initial": 30000, "min": 0, "max": 500000, "label": "Capital" },
    "inventory": { "initial": 5, "min": 0, "max": 30, "label": "Items in Stock" },
    "reputation": { "initial": 20, "min": 0, "max": 100, "label": "Reputation" },
    "expertise": { "initial": 10, "min": 0, "max": 100, "label": "Expertise" },
    "excitement": { "initial": 5, "min": 0, "max": 100, "label": "Market Buzz" }
  },
  "actions": {
    "showroom": [
      {
        "name": "go_sourcing",
        "label": "Source New Items",
        "description": "Visit estate sales and dealers.",
        "effects": [{ "resource": "capital", "operation": "-", "value": "random(3000,8000)" }],
        "transition": "sourcing"
      },
      {
        "name": "appraise_stock",
        "label": "Appraise Stock",
        "description": "Evaluate items in your collection.",
        "effects": [],
        "transition": "appraisal"
      },
      {
        "name": "host_auction",
        "label": "Host Auction",
        "description": "Open the doors for a live auction event.",
        "condition": { "resource": "inventory", "operator": ">=", "value": "3" },
        "effects": [{ "resource": "excitement", "operation": "+", "value": "random(5,10)" }],
        "transition": "live_auction"
      },
      {
        "name": "advertise",
        "label": "Advertise",
        "description": "Run ads to attract collectors.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(2000,5000)" },
          { "resource": "excitement", "operation": "+", "value": "random(5,12)" },
          { "resource": "reputation", "operation": "+", "value": "random(2,4)" }
        ]
      }
    ],
    "sourcing": [
      {
        "name": "buy_estate",
        "label": "Buy Estate Lot",
        "description": "Purchase an entire collection.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(10000,25000)" },
          { "resource": "inventory", "operation": "+", "value": "random(3,6)" }
        ]
      },
      {
        "name": "cherry_pick",
        "label": "Cherry Pick",
        "description": "Select only the best pieces.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(5000,12000)" },
          { "resource": "inventory", "operation": "+", "value": "random(1,2)" },
          { "resource": "expertise", "operation": "+", "value": "random(2,5)" }
        ]
      },
      {
        "name": "return_showroom",
        "label": "Return to Showroom",
        "description": "Head back with your finds.",
        "effects": [],
        "transition": "showroom"
      }
    ],
    "appraisal": [
      {
        "name": "detailed_exam",
        "label": "Detailed Examination",
        "description": "Spend time thoroughly evaluating each piece.",
        "effects": [
          { "resource": "expertise", "operation": "+", "value": "random(3,7)" },
          { "resource": "reputation", "operation": "+", "value": "random(2,4)" }
        ]
      },
      {
        "name": "call_expert",
        "label": "Consult an Expert",
        "description": "Bring in a specialist for a second opinion.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(2000,5000)" },
          { "resource": "expertise", "operation": "+", "value": "random(5,10)" }
        ]
      },
      {
        "name": "done_appraising",
        "label": "Finish Appraisal",
        "description": "Return to the showroom.",
        "effects": [],
        "transition": "showroom"
      }
    ],
    "live_auction": [
      {
        "name": "start_low",
        "label": "Start Bidding Low",
        "description": "Open at a conservative price to build momentum.",
        "effects": [
          { "resource": "inventory", "operation": "-", "value": "random(1,2)" },
          { "resource": "capital", "operation": "+", "value": "random(10000,25000)" },
          { "resource": "excitement", "operation": "+", "value": "random(5,10)" },
          { "resource": "reputation", "operation": "+", "value": "random(3,6)" }
        ]
      },
      {
        "name": "high_reserve",
        "label": "Set High Reserve",
        "description": "Only sell if the price reaches your target.",
        "effects": [
          { "resource": "inventory", "operation": "-", "value": "random(0,1)" },
          { "resource": "capital", "operation": "+", "value": "random(15000,40000)" },
          { "resource": "reputation", "operation": "+", "value": "random(4,8)" }
        ]
      },
      {
        "name": "gavel_down",
        "label": "Close the Auction",
        "description": "End the event and tally results.",
        "effects": [{ "resource": "excitement", "operation": "-", "value": "random(5,10)" }],
        "transition": "showroom"
      }
    ],
    "private_sale": [
      {
        "name": "negotiate",
        "label": "Negotiate Terms",
        "description": "Work out a deal with the collector.",
        "effects": [
          { "resource": "capital", "operation": "+", "value": "random(20000,50000)" },
          { "resource": "inventory", "operation": "-", "value": "random(1,2)" },
          { "resource": "reputation", "operation": "+", "value": "random(5,10)" }
        ],
        "transition": "showroom"
      },
      {
        "name": "decline_offer",
        "label": "Decline",
        "description": "The price is not right.",
        "effects": [{ "resource": "reputation", "operation": "+", "value": "random(1,3)" }],
        "transition": "showroom"
      }
    ],
    "forgery_scandal": [
      {
        "name": "investigate",
        "label": "Investigate the Claim",
        "description": "Hire experts to verify the item.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(5000,10000)" },
          { "resource": "expertise", "operation": "+", "value": "random(3,6)" },
          { "resource": "reputation", "operation": "+", "value": "random(3,8)" }
        ],
        "transition": "showroom"
      },
      {
        "name": "refund",
        "label": "Issue Refund",
        "description": "Pay back the buyer to save face.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(15000,30000)" },
          { "resource": "reputation", "operation": "+", "value": "random(5,10)" }
        ],
        "transition": "showroom"
      },
      {
        "name": "deny",
        "label": "Deny the Claim",
        "description": "Stand your ground. Risk your name.",
        "effects": [{ "resource": "reputation", "operation": "-", "value": "random(8,15)" }],
        "transition": "showroom"
      }
    ]
  },
  "transitions": [
    {
      "from": "showroom",
      "to": "private_sale",
      "condition": { "resource": "reputation", "operator": ">=", "value": "50" },
      "auto": true
    },
    {
      "from": "live_auction",
      "to": "forgery_scandal",
      "condition": { "resource": "expertise", "operator": "<=", "value": "8" },
      "auto": true
    }
  ],
  "winCondition": { "resource": "reputation", "operator": ">=", "value": "90" },
  "loseCondition": { "resource": "capital", "operator": "<=", "value": "0" },
  "theme": {
    "palette": "mahogany-gold",
    "stateDescriptions": {
      "showroom": { "label": "Showroom", "icon": "home" },
      "sourcing": { "label": "Sourcing", "icon": "search" },
      "appraisal": { "label": "Appraisal", "icon": "eye" },
      "live_auction": { "label": "Live Auction!", "icon": "gavel" },
      "private_sale": { "label": "Private Sale", "icon": "lock" },
      "forgery_scandal": { "label": "Scandal!", "icon": "alert" }
    },
    "resourceIcons": {
      "capital": "dollar-sign",
      "inventory": "box",
      "reputation": "star",
      "expertise": "award",
      "excitement": "zap"
    }
  }
}
