{
  "name": "Crypto Trading",
  "description": "Navigate the wild world of cryptocurrency. Trade tokens, stake for yields, watch for rug pulls, and build your digital fortune in the volatile market.",
  "states": [
    {
      "name": "portfolio",
      "description": "Your wallet dashboard. Prices update every second.",
      "onEnter": []
    },
    {
      "name": "dex",
      "description": "The decentralized exchange. Swap tokens freely.",
      "onEnter": []
    },
    {
      "name": "staking",
      "description": "Lock your tokens to earn passive yield.",
      "onEnter": [{ "resource": "passive_income", "operation": "+", "value": "random(2,5)" }]
    },
    {
      "name": "ico_launch",
      "description": "A new token is launching. Early buyers get discounts.",
      "onEnter": [{ "resource": "fomo", "operation": "+", "value": "random(5,10)" }]
    },
    {
      "name": "market_crash",
      "description": "Prices plummet across the board. Red everywhere.",
      "onEnter": [
        { "resource": "holdings", "operation": "-", "value": "random(10,20)" },
        { "resource": "fomo", "operation": "+", "value": "8" }
      ]
    },
    {
      "name": "moon_shot",
      "description": "Your holdings are surging. Charts go vertical.",
      "onEnter": [{ "resource": "holdings", "operation": "+", "value": "random(15,30)" }]
    }
  ],
  "initialState": "portfolio",
  "resources": {
    "cash": { "initial": 10000, "min": 0, "max": 1000000, "label": "USD Balance" },
    "holdings": { "initial": 10, "min": 0, "max": 200, "label": "Crypto Holdings" },
    "passive_income": { "initial": 0, "min": 0, "max": 100, "label": "Passive Income" },
    "fomo": { "initial": 5, "min": 0, "max": 100, "label": "FOMO" },
    "knowledge": { "initial": 10, "min": 0, "max": 100, "label": "Market Knowledge" },
    "reputation": { "initial": 10, "min": 0, "max": 100, "label": "Reputation" }
  },
  "actions": {
    "portfolio": [
      {
        "name": "visit_dex",
        "label": "Open DEX",
        "description": "Visit the decentralized exchange.",
        "effects": [],
        "transition": "dex"
      },
      {
        "name": "stake_tokens",
        "label": "Stake Tokens",
        "description": "Lock holdings for passive yield.",
        "condition": { "resource": "holdings", "operator": ">=", "value": "10" },
        "effects": [{ "resource": "holdings", "operation": "-", "value": "random(5,10)" }],
        "transition": "staking"
      },
      {
        "name": "research",
        "label": "Research Projects",
        "description": "Read whitepapers and audit reports.",
        "effects": [
          { "resource": "knowledge", "operation": "+", "value": "random(5,10)" },
          { "resource": "fomo", "operation": "-", "value": "random(2,5)" }
        ]
      },
      {
        "name": "check_twitter",
        "label": "Check Crypto Twitter",
        "description": "See what influencers are promoting.",
        "effects": [
          { "resource": "knowledge", "operation": "+", "value": "random(1,3)" },
          { "resource": "fomo", "operation": "+", "value": "random(3,8)" }
        ]
      }
    ],
    "dex": [
      {
        "name": "swap_buy",
        "label": "Buy Crypto",
        "description": "Swap USD for tokens.",
        "effects": [
          { "resource": "cash", "operation": "-", "value": "random(2000,8000)" },
          { "resource": "holdings", "operation": "+", "value": "random(5,15)" }
        ]
      },
      {
        "name": "swap_sell",
        "label": "Sell Crypto",
        "description": "Convert tokens back to USD.",
        "effects": [
          { "resource": "holdings", "operation": "-", "value": "random(5,10)" },
          { "resource": "cash", "operation": "+", "value": "random(3000,12000)" }
        ]
      },
      {
        "name": "provide_liquidity",
        "label": "Provide Liquidity",
        "description": "Add to a liquidity pool for fees.",
        "effects": [
          { "resource": "holdings", "operation": "-", "value": "random(5,10)" },
          { "resource": "passive_income", "operation": "+", "value": "random(3,8)" },
          { "resource": "reputation", "operation": "+", "value": "random(2,4)" }
        ]
      },
      {
        "name": "back_to_portfolio",
        "label": "Back to Portfolio",
        "description": "Return to your dashboard.",
        "effects": [],
        "transition": "portfolio"
      }
    ],
    "staking": [
      {
        "name": "claim_rewards",
        "label": "Claim Rewards",
        "description": "Harvest your staking rewards.",
        "effects": [
          { "resource": "cash", "operation": "+", "value": "random(1000,5000)" },
          { "resource": "passive_income", "operation": "+", "value": "random(2,5)" },
          { "resource": "reputation", "operation": "+", "value": "random(2,5)" }
        ]
      },
      {
        "name": "compound",
        "label": "Compound Rewards",
        "description": "Reinvest rewards for higher yields.",
        "effects": [
          { "resource": "holdings", "operation": "+", "value": "random(3,8)" },
          { "resource": "passive_income", "operation": "+", "value": "random(3,6)" }
        ]
      },
      {
        "name": "unstake",
        "label": "Unstake",
        "description": "Withdraw your staked tokens.",
        "effects": [{ "resource": "holdings", "operation": "+", "value": "random(5,10)" }],
        "transition": "portfolio"
      }
    ],
    "ico_launch": [
      {
        "name": "invest_early",
        "label": "Invest Early",
        "description": "Buy at the discounted launch price.",
        "effects": [
          { "resource": "cash", "operation": "-", "value": "random(3000,10000)" },
          { "resource": "holdings", "operation": "+", "value": "random(10,25)" },
          { "resource": "fomo", "operation": "-", "value": "5" }
        ],
        "transition": "portfolio"
      },
      {
        "name": "pass",
        "label": "Pass",
        "description": "This could be a rug pull. Skip it.",
        "effects": [
          { "resource": "fomo", "operation": "+", "value": "5" },
          { "resource": "knowledge", "operation": "+", "value": "random(2,4)" }
        ],
        "transition": "portfolio"
      },
      {
        "name": "ape_in",
        "label": "Ape In",
        "description": "Throw caution to the wind. Go big.",
        "effects": [
          { "resource": "cash", "operation": "-", "value": "random(8000,20000)" },
          { "resource": "holdings", "operation": "+", "value": "random(20,40)" },
          { "resource": "fomo", "operation": "-", "value": "10" }
        ],
        "transition": "portfolio"
      }
    ],
    "market_crash": [
      {
        "name": "hold",
        "label": "HODL",
        "description": "Diamond hands. Do not sell.",
        "effects": [{ "resource": "fomo", "operation": "+", "value": "random(5,10)" }],
        "transition": "portfolio"
      },
      {
        "name": "panic_sell",
        "label": "Panic Sell",
        "description": "Get out before it gets worse.",
        "effects": [
          { "resource": "holdings", "operation": "-", "value": "random(10,20)" },
          { "resource": "cash", "operation": "+", "value": "random(3000,10000)" },
          { "resource": "fomo", "operation": "+", "value": "10" }
        ],
        "transition": "portfolio"
      },
      {
        "name": "buy_blood",
        "label": "Buy the Blood",
        "description": "When others are fearful, be greedy.",
        "effects": [
          { "resource": "cash", "operation": "-", "value": "random(5000,15000)" },
          { "resource": "holdings", "operation": "+", "value": "random(15,30)" },
          { "resource": "knowledge", "operation": "+", "value": "random(3,6)" }
        ],
        "transition": "portfolio"
      }
    ],
    "moon_shot": [
      {
        "name": "take_profit",
        "label": "Take Profit",
        "description": "Sell into strength.",
        "effects": [
          { "resource": "holdings", "operation": "-", "value": "random(10,20)" },
          { "resource": "cash", "operation": "+", "value": "random(20000,50000)" },
          { "resource": "reputation", "operation": "+", "value": "random(5,10)" }
        ],
        "transition": "portfolio"
      },
      {
        "name": "let_ride",
        "label": "Let It Ride",
        "description": "Hold for even bigger gains.",
        "effects": [
          { "resource": "holdings", "operation": "+", "value": "random(5,15)" },
          { "resource": "fomo", "operation": "+", "value": "5" }
        ],
        "transition": "portfolio"
      }
    ]
  },
  "transitions": [
    {
      "from": "portfolio",
      "to": "ico_launch",
      "condition": { "resource": "knowledge", "operator": ">=", "value": "30" },
      "auto": true
    },
    {
      "from": "portfolio",
      "to": "market_crash",
      "condition": { "resource": "fomo", "operator": ">=", "value": "50" },
      "auto": true
    },
    {
      "from": "dex",
      "to": "moon_shot",
      "condition": { "resource": "holdings", "operator": ">=", "value": "80" },
      "auto": true
    }
  ],
  "winCondition": { "resource": "reputation", "operator": ">=", "value": "85" },
  "loseCondition": { "resource": "cash", "operator": "<=", "value": "0" },
  "theme": {
    "palette": "crypto-neon",
    "stateDescriptions": {
      "portfolio": { "label": "Portfolio", "icon": "briefcase" },
      "dex": { "label": "DEX", "icon": "repeat" },
      "staking": { "label": "Staking", "icon": "lock" },
      "ico_launch": { "label": "New Launch!", "icon": "rocket" },
      "market_crash": { "label": "Crash!", "icon": "arrow-down" },
      "moon_shot": { "label": "Moon!", "icon": "arrow-up" }
    },
    "resourceIcons": {
      "cash": "dollar-sign",
      "holdings": "database",
      "passive_income": "repeat",
      "fomo": "alert",
      "knowledge": "book",
      "reputation": "star"
    }
  }
}
