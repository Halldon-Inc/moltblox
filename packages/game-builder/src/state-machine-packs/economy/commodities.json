{
  "name": "Commodities",
  "description": "Trade physical commodities like oil, gold, wheat, and copper. Navigate geopolitical tensions, weather disruptions, and market cycles to build wealth.",
  "states": [
    {
      "name": "trading_desk",
      "description": "Your desk surrounded by commodity price tickers.",
      "onEnter": []
    },
    {
      "name": "futures_pit",
      "description": "The loud, chaotic trading floor for futures contracts.",
      "onEnter": [{ "resource": "contracts", "operation": "+", "value": "random(1,3)" }]
    },
    {
      "name": "physical_market",
      "description": "Inspecting actual shipments of raw materials.",
      "onEnter": [{ "resource": "knowledge", "operation": "+", "value": "random(2,4)" }]
    },
    {
      "name": "geopolitical_event",
      "description": "A political crisis is shaking commodity prices.",
      "onEnter": [{ "resource": "volatility", "operation": "+", "value": "random(8,15)" }]
    },
    {
      "name": "weather_disruption",
      "description": "Extreme weather is affecting supply.",
      "onEnter": [{ "resource": "volatility", "operation": "+", "value": "random(5,10)" }]
    },
    {
      "name": "settlement",
      "description": "Contracts are expiring. Time to settle.",
      "onEnter": []
    }
  ],
  "initialState": "trading_desk",
  "resources": {
    "capital": { "initial": 200000, "min": 0, "max": 2000000, "label": "Capital" },
    "contracts": { "initial": 5, "min": 0, "max": 50, "label": "Open Contracts" },
    "profit": { "initial": 0, "min": 0, "max": 200, "label": "Profit Score" },
    "knowledge": { "initial": 10, "min": 0, "max": 100, "label": "Market Knowledge" },
    "volatility": { "initial": 15, "min": 0, "max": 100, "label": "Market Volatility" },
    "reputation": { "initial": 15, "min": 0, "max": 100, "label": "Reputation" }
  },
  "actions": {
    "trading_desk": [
      {
        "name": "go_futures",
        "label": "Enter Futures Pit",
        "description": "Trade futures contracts on the floor.",
        "effects": [],
        "transition": "futures_pit"
      },
      {
        "name": "go_physical",
        "label": "Check Physical Markets",
        "description": "Inspect real commodities.",
        "effects": [],
        "transition": "physical_market"
      },
      {
        "name": "analyze",
        "label": "Market Analysis",
        "description": "Study supply and demand data.",
        "effects": [{ "resource": "knowledge", "operation": "+", "value": "random(4,8)" }]
      },
      {
        "name": "hedge",
        "label": "Hedge Positions",
        "description": "Reduce risk by taking opposite positions.",
        "effects": [
          { "resource": "volatility", "operation": "-", "value": "random(5,10)" },
          { "resource": "capital", "operation": "-", "value": "random(5000,15000)" }
        ]
      }
    ],
    "futures_pit": [
      {
        "name": "buy_oil",
        "label": "Buy Oil Futures",
        "description": "Go long on crude oil.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(15000,40000)" },
          { "resource": "contracts", "operation": "+", "value": "random(2,4)" },
          { "resource": "profit", "operation": "+", "value": "random(5,15)" }
        ]
      },
      {
        "name": "buy_gold",
        "label": "Buy Gold Futures",
        "description": "Go long on gold as a safe haven.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(20000,50000)" },
          { "resource": "contracts", "operation": "+", "value": "random(1,3)" },
          { "resource": "profit", "operation": "+", "value": "random(3,10)" },
          { "resource": "volatility", "operation": "-", "value": "random(2,5)" }
        ]
      },
      {
        "name": "sell_short",
        "label": "Sell Short",
        "description": "Bet on falling prices.",
        "effects": [
          { "resource": "contracts", "operation": "+", "value": "random(1,3)" },
          { "resource": "profit", "operation": "+", "value": "random(5,12)" },
          { "resource": "volatility", "operation": "+", "value": "random(3,6)" }
        ]
      },
      {
        "name": "leave_pit",
        "label": "Leave the Pit",
        "description": "Step away from the chaos.",
        "effects": [],
        "transition": "trading_desk"
      }
    ],
    "physical_market": [
      {
        "name": "inspect_cargo",
        "label": "Inspect Cargo",
        "description": "Check the quality of incoming shipments.",
        "effects": [
          { "resource": "knowledge", "operation": "+", "value": "random(3,6)" },
          { "resource": "reputation", "operation": "+", "value": "random(2,5)" }
        ]
      },
      {
        "name": "buy_physical",
        "label": "Buy Physical Stock",
        "description": "Purchase actual commodities for delivery.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(30000,60000)" },
          { "resource": "profit", "operation": "+", "value": "random(5,12)" },
          { "resource": "reputation", "operation": "+", "value": "random(3,6)" }
        ]
      },
      {
        "name": "return_desk",
        "label": "Return to Desk",
        "description": "Head back to the trading desk.",
        "effects": [],
        "transition": "trading_desk"
      }
    ],
    "geopolitical_event": [
      {
        "name": "crisis_buy",
        "label": "Buy on Crisis",
        "description": "Commodity shortages mean rising prices.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(20000,50000)" },
          { "resource": "profit", "operation": "+", "value": "random(10,25)" },
          { "resource": "contracts", "operation": "+", "value": "random(2,5)" }
        ],
        "transition": "trading_desk"
      },
      {
        "name": "wait_out",
        "label": "Wait It Out",
        "description": "Let the dust settle before trading.",
        "effects": [
          { "resource": "volatility", "operation": "-", "value": "random(3,6)" },
          { "resource": "knowledge", "operation": "+", "value": "random(2,5)" }
        ],
        "transition": "trading_desk"
      },
      {
        "name": "sell_everything",
        "label": "Sell Everything",
        "description": "Dump all positions to avoid losses.",
        "effects": [
          { "resource": "contracts", "operation": "-", "value": "random(3,8)" },
          { "resource": "capital", "operation": "+", "value": "random(20000,60000)" },
          { "resource": "volatility", "operation": "-", "value": "random(5,10)" }
        ],
        "transition": "trading_desk"
      }
    ],
    "weather_disruption": [
      {
        "name": "buy_agricultural",
        "label": "Buy Agricultural Futures",
        "description": "Crop damage means higher grain prices.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(15000,35000)" },
          { "resource": "contracts", "operation": "+", "value": "random(2,4)" },
          { "resource": "profit", "operation": "+", "value": "random(8,18)" }
        ],
        "transition": "trading_desk"
      },
      {
        "name": "hold_position",
        "label": "Hold Current Position",
        "description": "Stay the course through the storm.",
        "effects": [{ "resource": "volatility", "operation": "+", "value": "random(3,6)" }],
        "transition": "trading_desk"
      }
    ],
    "settlement": [
      {
        "name": "settle_cash",
        "label": "Cash Settlement",
        "description": "Close contracts and take cash.",
        "effects": [
          { "resource": "contracts", "operation": "-", "value": "random(3,8)" },
          { "resource": "capital", "operation": "+", "value": "random(30000,80000)" },
          { "resource": "profit", "operation": "+", "value": "random(5,12)" },
          { "resource": "reputation", "operation": "+", "value": "random(3,6)" }
        ],
        "transition": "trading_desk"
      },
      {
        "name": "roll_over",
        "label": "Roll Over Contracts",
        "description": "Extend positions to the next month.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(5000,15000)" },
          { "resource": "contracts", "operation": "+", "value": "random(1,3)" }
        ],
        "transition": "trading_desk"
      }
    ]
  },
  "transitions": [
    {
      "from": "trading_desk",
      "to": "geopolitical_event",
      "condition": { "resource": "volatility", "operator": ">=", "value": "50" },
      "auto": true
    },
    {
      "from": "trading_desk",
      "to": "weather_disruption",
      "condition": { "resource": "knowledge", "operator": ">=", "value": "40" },
      "auto": true
    },
    {
      "from": "futures_pit",
      "to": "settlement",
      "condition": { "resource": "contracts", "operator": ">=", "value": "20" },
      "auto": true
    }
  ],
  "winCondition": { "resource": "profit", "operator": ">=", "value": "150" },
  "loseCondition": { "resource": "capital", "operator": "<=", "value": "0" },
  "theme": {
    "palette": "commodity-amber",
    "stateDescriptions": {
      "trading_desk": { "label": "Trading Desk", "icon": "monitor" },
      "futures_pit": { "label": "Futures Pit", "icon": "trending-up" },
      "physical_market": { "label": "Physical Market", "icon": "package" },
      "geopolitical_event": { "label": "Geopolitical Crisis", "icon": "globe" },
      "weather_disruption": { "label": "Weather Event", "icon": "cloud" },
      "settlement": { "label": "Settlement", "icon": "check-circle" }
    },
    "resourceIcons": {
      "capital": "dollar-sign",
      "contracts": "file-text",
      "profit": "trending-up",
      "knowledge": "book",
      "volatility": "activity",
      "reputation": "star"
    }
  }
}
