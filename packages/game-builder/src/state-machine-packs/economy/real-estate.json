{
  "name": "Real Estate",
  "description": "Build a property empire from the ground up. Buy properties, renovate them, manage tenants, and flip for profit in a competitive market.",
  "states": [
    {
      "name": "office",
      "description": "Your real estate office. Listings cover the walls.",
      "onEnter": []
    },
    {
      "name": "property_tour",
      "description": "Walking through a potential investment property.",
      "onEnter": [{ "resource": "knowledge", "operation": "+", "value": "random(1,3)" }]
    },
    {
      "name": "renovation",
      "description": "Construction crews are transforming the property.",
      "onEnter": []
    },
    {
      "name": "tenant_management",
      "description": "Dealing with tenants, rent collection, and complaints.",
      "onEnter": [{ "resource": "income", "operation": "+", "value": "random(3,8)" }]
    },
    { "name": "closing", "description": "Signing papers at the title company.", "onEnter": [] },
    {
      "name": "market_shift",
      "description": "The housing market is changing direction.",
      "onEnter": []
    }
  ],
  "initialState": "office",
  "resources": {
    "capital": { "initial": 100000, "min": 0, "max": 2000000, "label": "Capital" },
    "properties": { "initial": 1, "min": 0, "max": 20, "label": "Properties Owned" },
    "income": { "initial": 5, "min": 0, "max": 100, "label": "Monthly Income" },
    "knowledge": { "initial": 10, "min": 0, "max": 100, "label": "Market Knowledge" },
    "reputation": { "initial": 15, "min": 0, "max": 100, "label": "Reputation" },
    "equity": { "initial": 10, "min": 0, "max": 200, "label": "Total Equity" }
  },
  "actions": {
    "office": [
      {
        "name": "search_listings",
        "label": "Search Listings",
        "description": "Browse available properties.",
        "effects": [{ "resource": "knowledge", "operation": "+", "value": "random(2,5)" }],
        "transition": "property_tour"
      },
      {
        "name": "collect_rent",
        "label": "Collect Rent",
        "description": "Gather monthly payments from tenants.",
        "condition": { "resource": "properties", "operator": ">=", "value": "1" },
        "effects": [
          { "resource": "capital", "operation": "+", "value": "random(5000,15000)" },
          { "resource": "income", "operation": "+", "value": "random(1,3)" }
        ]
      },
      {
        "name": "manage_tenants",
        "label": "Manage Tenants",
        "description": "Handle tenant requests and issues.",
        "condition": { "resource": "properties", "operator": ">=", "value": "1" },
        "effects": [],
        "transition": "tenant_management"
      },
      {
        "name": "sell_property",
        "label": "List Property for Sale",
        "description": "Put a property on the market.",
        "condition": { "resource": "properties", "operator": ">=", "value": "2" },
        "effects": [],
        "transition": "closing"
      },
      {
        "name": "network",
        "label": "Attend Networking Event",
        "description": "Meet other investors and agents.",
        "effects": [
          { "resource": "reputation", "operation": "+", "value": "random(3,8)" },
          { "resource": "knowledge", "operation": "+", "value": "random(2,4)" },
          { "resource": "capital", "operation": "-", "value": "random(500,2000)" }
        ]
      }
    ],
    "property_tour": [
      {
        "name": "make_offer",
        "label": "Make an Offer",
        "description": "Submit a bid on the property.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(30000,80000)" },
          { "resource": "properties", "operation": "+", "value": "1" },
          { "resource": "equity", "operation": "+", "value": "random(10,25)" }
        ],
        "transition": "office"
      },
      {
        "name": "lowball",
        "label": "Lowball Offer",
        "description": "Try to get a bargain price.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(15000,40000)" },
          { "resource": "properties", "operation": "+", "value": "random(0,1)" },
          { "resource": "reputation", "operation": "-", "value": "random(1,3)" }
        ],
        "transition": "office"
      },
      {
        "name": "pass_property",
        "label": "Pass",
        "description": "This one is not worth it.",
        "effects": [{ "resource": "knowledge", "operation": "+", "value": "random(1,3)" }],
        "transition": "office"
      }
    ],
    "renovation": [
      {
        "name": "basic_reno",
        "label": "Basic Renovation",
        "description": "Paint, fixtures, and cleanup.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(5000,15000)" },
          { "resource": "equity", "operation": "+", "value": "random(5,12)" }
        ],
        "transition": "office"
      },
      {
        "name": "full_reno",
        "label": "Full Gut Rehab",
        "description": "Tear everything out and rebuild.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(25000,60000)" },
          { "resource": "equity", "operation": "+", "value": "random(15,35)" },
          { "resource": "reputation", "operation": "+", "value": "random(3,6)" }
        ],
        "transition": "office"
      },
      {
        "name": "skip_reno",
        "label": "Skip Renovation",
        "description": "Save money and rent as-is.",
        "effects": [{ "resource": "reputation", "operation": "-", "value": "random(2,4)" }],
        "transition": "office"
      }
    ],
    "tenant_management": [
      {
        "name": "fix_issues",
        "label": "Fix Maintenance Issues",
        "description": "Repair leaks, HVAC, and appliances.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(2000,8000)" },
          { "resource": "reputation", "operation": "+", "value": "random(3,6)" },
          { "resource": "income", "operation": "+", "value": "random(1,3)" }
        ],
        "transition": "office"
      },
      {
        "name": "raise_rent",
        "label": "Raise Rent",
        "description": "Increase monthly payments.",
        "effects": [
          { "resource": "income", "operation": "+", "value": "random(3,8)" },
          { "resource": "reputation", "operation": "-", "value": "random(2,5)" }
        ],
        "transition": "office"
      },
      {
        "name": "evict",
        "label": "Evict Problem Tenant",
        "description": "Start eviction proceedings.",
        "effects": [
          { "resource": "capital", "operation": "-", "value": "random(3000,8000)" },
          { "resource": "income", "operation": "-", "value": "random(2,5)" },
          { "resource": "reputation", "operation": "-", "value": "random(3,6)" }
        ],
        "transition": "office"
      }
    ],
    "closing": [
      {
        "name": "sell_flip",
        "label": "Sell at Market Price",
        "description": "Complete the sale at listing price.",
        "effects": [
          { "resource": "properties", "operation": "-", "value": "1" },
          { "resource": "capital", "operation": "+", "value": "random(50000,120000)" },
          { "resource": "equity", "operation": "-", "value": "random(10,20)" },
          { "resource": "reputation", "operation": "+", "value": "random(5,10)" }
        ],
        "transition": "office"
      },
      {
        "name": "hold",
        "label": "Pull from Market",
        "description": "Keep the property instead.",
        "effects": [{ "resource": "income", "operation": "+", "value": "random(2,5)" }],
        "transition": "office"
      }
    ],
    "market_shift": [
      {
        "name": "adapt",
        "label": "Adapt Strategy",
        "description": "Pivot your approach to match the market.",
        "effects": [
          { "resource": "knowledge", "operation": "+", "value": "random(5,10)" },
          { "resource": "equity", "operation": "+", "value": "random(5,15)" }
        ],
        "transition": "office"
      },
      {
        "name": "hold_course",
        "label": "Stay the Course",
        "description": "Keep your current strategy.",
        "effects": [{ "resource": "equity", "operation": "-", "value": "random(5,10)" }],
        "transition": "office"
      }
    ]
  },
  "transitions": [
    {
      "from": "office",
      "to": "renovation",
      "condition": { "resource": "properties", "operator": ">=", "value": "3" },
      "auto": false
    },
    {
      "from": "office",
      "to": "market_shift",
      "condition": { "resource": "knowledge", "operator": ">=", "value": "50" },
      "auto": true
    }
  ],
  "winCondition": { "resource": "equity", "operator": ">=", "value": "150" },
  "loseCondition": { "resource": "capital", "operator": "<=", "value": "0" },
  "theme": {
    "palette": "brick-red",
    "stateDescriptions": {
      "office": { "label": "Office", "icon": "home" },
      "property_tour": { "label": "Property Tour", "icon": "map" },
      "renovation": { "label": "Renovation", "icon": "tool" },
      "tenant_management": { "label": "Tenants", "icon": "users" },
      "closing": { "label": "Closing", "icon": "file-text" },
      "market_shift": { "label": "Market Shift", "icon": "trending-up" }
    },
    "resourceIcons": {
      "capital": "dollar-sign",
      "properties": "home",
      "income": "repeat",
      "knowledge": "book",
      "reputation": "star",
      "equity": "trending-up"
    }
  }
}
