{
  "name": "Trade War",
  "description": "Wage an economic war using tariffs, subsidies, and market manipulation to dominate global commerce.",
  "states": [
    { "name": "economic_council", "description": "Your team of economic advisors.", "onEnter": [] },
    { "name": "tariff_office", "description": "Set import/export tariffs.", "onEnter": [] },
    { "name": "market_floor", "description": "The global commodity exchange.", "onEnter": [] },
    { "name": "negotiations", "description": "Bilateral trade talks.", "onEnter": [] },
    {
      "name": "recession",
      "description": "Economic downturn hits your nation.",
      "onEnter": [{ "resource": "gdp", "operation": "-", "value": "10" }]
    }
  ],
  "initialState": "economic_council",
  "resources": {
    "gdp": { "initial": 100, "min": 0, "max": 300, "label": "GDP" },
    "reserves": { "initial": 200, "min": 0, "label": "Reserves" },
    "market_share": { "initial": 15, "min": 0, "max": 60, "label": "Market Share" },
    "public_approval": { "initial": 60, "min": 0, "max": 100, "label": "Public Approval" },
    "trade_partners": { "initial": 3, "min": 0, "max": 10, "label": "Trade Partners" },
    "enemy_economy": { "initial": 100, "min": 0, "label": "Rival Economy" }
  },
  "actions": {
    "economic_council": [
      {
        "name": "go_tariff",
        "label": "Tariff Policy",
        "effects": [],
        "transition": "tariff_office"
      },
      {
        "name": "go_market",
        "label": "Market Operations",
        "effects": [],
        "transition": "market_floor"
      },
      {
        "name": "go_negotiate",
        "label": "Trade Negotiations",
        "effects": [],
        "transition": "negotiations"
      },
      {
        "name": "stimulus",
        "label": "Economic Stimulus",
        "condition": { "resource": "reserves", "operator": ">=", "value": "30" },
        "effects": [
          { "resource": "reserves", "operation": "-", "value": "30" },
          { "resource": "gdp", "operation": "+", "value": "random(8,15)" },
          { "resource": "public_approval", "operation": "+", "value": "random(3,6)" }
        ]
      },
      {
        "name": "subsidize",
        "label": "Subsidize Industry",
        "condition": { "resource": "reserves", "operator": ">=", "value": "20" },
        "effects": [
          { "resource": "reserves", "operation": "-", "value": "20" },
          { "resource": "market_share", "operation": "+", "value": "random(2,5)" },
          { "resource": "gdp", "operation": "+", "value": "random(3,8)" }
        ]
      }
    ],
    "tariff_office": [
      {
        "name": "raise_tariffs",
        "label": "Raise Tariffs",
        "effects": [
          { "resource": "market_share", "operation": "+", "value": "random(2,5)" },
          { "resource": "enemy_economy", "operation": "-", "value": "random(5,12)" },
          { "resource": "trade_partners", "operation": "-", "value": "random(0,1)" },
          { "resource": "public_approval", "operation": "-", "value": "random(2,5)" }
        ]
      },
      {
        "name": "lower_tariffs",
        "label": "Lower Tariffs",
        "effects": [
          { "resource": "trade_partners", "operation": "+", "value": "random(0,1)" },
          { "resource": "gdp", "operation": "+", "value": "random(3,8)" },
          { "resource": "public_approval", "operation": "+", "value": "random(1,3)" }
        ]
      },
      {
        "name": "targeted_tariff",
        "label": "Targeted Tariff",
        "effects": [
          { "resource": "enemy_economy", "operation": "-", "value": "random(8,15)" },
          { "resource": "reserves", "operation": "+", "value": "random(5,10)" }
        ]
      },
      {
        "name": "back",
        "label": "Back to Council",
        "effects": [],
        "transition": "economic_council"
      }
    ],
    "market_floor": [
      {
        "name": "dump_goods",
        "label": "Dump Cheap Goods",
        "condition": { "resource": "reserves", "operator": ">=", "value": "25" },
        "effects": [
          { "resource": "reserves", "operation": "-", "value": "25" },
          { "resource": "enemy_economy", "operation": "-", "value": "random(10,20)" },
          { "resource": "market_share", "operation": "+", "value": "random(3,6)" }
        ]
      },
      {
        "name": "manipulate_currency",
        "label": "Currency Manipulation",
        "effects": [
          { "resource": "market_share", "operation": "+", "value": "random(2,5)" },
          { "resource": "public_approval", "operation": "-", "value": "random(3,6)" },
          { "resource": "enemy_economy", "operation": "-", "value": "random(5,10)" }
        ]
      },
      {
        "name": "invest",
        "label": "Invest in Growth",
        "condition": { "resource": "reserves", "operator": ">=", "value": "15" },
        "effects": [
          { "resource": "reserves", "operation": "-", "value": "15" },
          { "resource": "gdp", "operation": "+", "value": "random(5,12)" }
        ]
      },
      {
        "name": "back",
        "label": "Back to Council",
        "effects": [],
        "transition": "economic_council"
      }
    ],
    "negotiations": [
      {
        "name": "free_trade",
        "label": "Free Trade Deal",
        "effects": [
          { "resource": "trade_partners", "operation": "+", "value": "1" },
          { "resource": "gdp", "operation": "+", "value": "random(5,10)" },
          { "resource": "public_approval", "operation": "+", "value": "random(2,4)" }
        ]
      },
      {
        "name": "embargo",
        "label": "Propose Embargo on Rival",
        "condition": { "resource": "trade_partners", "operator": ">=", "value": "4" },
        "effects": [
          { "resource": "enemy_economy", "operation": "-", "value": "random(15,25)" },
          { "resource": "trade_partners", "operation": "-", "value": "random(0,1)" }
        ]
      },
      {
        "name": "pressure",
        "label": "Economic Pressure",
        "effects": [
          { "resource": "enemy_economy", "operation": "-", "value": "random(5,12)" },
          { "resource": "reserves", "operation": "-", "value": "random(5,10)" }
        ]
      },
      {
        "name": "back",
        "label": "Back to Council",
        "effects": [],
        "transition": "economic_council"
      }
    ],
    "recession": [
      {
        "name": "austerity",
        "label": "Austerity Measures",
        "effects": [
          { "resource": "public_approval", "operation": "-", "value": "random(5,10)" },
          { "resource": "reserves", "operation": "+", "value": "random(10,20)" },
          { "resource": "gdp", "operation": "+", "value": "random(3,8)" }
        ],
        "transition": "economic_council"
      },
      {
        "name": "bail_out",
        "label": "Bailout Package",
        "condition": { "resource": "reserves", "operator": ">=", "value": "40" },
        "effects": [
          { "resource": "reserves", "operation": "-", "value": "40" },
          { "resource": "gdp", "operation": "+", "value": "random(10,20)" },
          { "resource": "public_approval", "operation": "+", "value": "random(3,6)" }
        ],
        "transition": "economic_council"
      }
    ]
  },
  "transitions": [
    {
      "from": "economic_council",
      "to": "recession",
      "condition": { "resource": "gdp", "operator": "<=", "value": "50" },
      "auto": true
    }
  ],
  "perTurnEffects": [{ "resource": "reserves", "operation": "+", "value": "5" }],
  "winCondition": { "resource": "enemy_economy", "operator": "<=", "value": "0" },
  "loseCondition": {
    "or": [
      { "resource": "public_approval", "operator": "<=", "value": "0" },
      { "resource": "gdp", "operator": "<=", "value": "0" }
    ]
  },
  "theme": {
    "palette": "finance-green",
    "stateDescriptions": {
      "economic_council": { "label": "Economic Council", "icon": "briefcase" },
      "tariff_office": { "label": "Tariff Office", "icon": "percent" },
      "market_floor": { "label": "Market Floor", "icon": "trending-up" },
      "negotiations": { "label": "Trade Talks", "icon": "message-circle" },
      "recession": { "label": "Recession!", "icon": "trending-down" }
    },
    "resourceIcons": {
      "gdp": "bar-chart",
      "reserves": "dollar",
      "market_share": "pie-chart",
      "public_approval": "smile",
      "trade_partners": "globe",
      "enemy_economy": "alert-triangle"
    }
  }
}
