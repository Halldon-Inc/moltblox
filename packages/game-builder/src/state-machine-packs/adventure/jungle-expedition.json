{
  "name": "Jungle Expedition",
  "description": "Lead an expedition deep into an uncharted jungle to find a lost temple. Manage supplies, navigate hazards, and survive the wild.",
  "states": [
    {
      "name": "base_camp",
      "description": "Your expedition base camp at the jungle edge.",
      "onEnter": []
    },
    {
      "name": "trail",
      "description": "Hacking through dense vegetation.",
      "onEnter": [{ "resource": "supplies", "operation": "-", "value": "1" }]
    },
    {
      "name": "river_crossing",
      "description": "A wide, fast river blocks the path.",
      "onEnter": []
    },
    {
      "name": "ruins",
      "description": "Ancient overgrown ruins. Carvings cover the walls.",
      "onEnter": []
    },
    {
      "name": "wildlife_encounter",
      "description": "Something large moves through the brush.",
      "onEnter": []
    },
    {
      "name": "temple_entrance",
      "description": "The lost temple towers above the canopy.",
      "onEnter": []
    },
    {
      "name": "temple_interior",
      "description": "Dark corridors filled with traps and treasures.",
      "onEnter": []
    }
  ],
  "initialState": "base_camp",
  "resources": {
    "health": { "initial": 100, "min": 0, "max": 100, "label": "Health" },
    "supplies": { "initial": 20, "min": 0, "max": 30, "label": "Supplies" },
    "machetes": { "initial": 3, "min": 0, "max": 5, "label": "Machetes" },
    "artifacts": { "initial": 0, "min": 0, "label": "Artifacts" },
    "knowledge": { "initial": 0, "min": 0, "max": 15, "label": "Knowledge" },
    "distance": { "initial": 0, "min": 0, "max": 20, "label": "Distance Traveled" },
    "morale": { "initial": 8, "min": 0, "max": 10, "label": "Team Morale" }
  },
  "actions": {
    "base_camp": [
      {
        "name": "prepare",
        "label": "Prepare Expedition",
        "description": "Double check gear and provisions.",
        "effects": [
          { "resource": "morale", "operation": "+", "value": "1" },
          { "resource": "supplies", "operation": "+", "value": "2" }
        ]
      },
      {
        "name": "depart",
        "label": "Head Into the Jungle",
        "description": "Begin the march into the wilderness.",
        "condition": { "resource": "supplies", "operator": ">=", "value": "5" },
        "effects": [{ "resource": "distance", "operation": "+", "value": "1" }],
        "transition": "trail"
      }
    ],
    "trail": [
      {
        "name": "push_forward",
        "label": "Push Forward",
        "description": "Keep moving through the jungle.",
        "effects": [
          { "resource": "distance", "operation": "+", "value": "random(1,3)" },
          { "resource": "supplies", "operation": "-", "value": "random(1,2)" },
          { "resource": "health", "operation": "-", "value": "random(0,5)" }
        ]
      },
      {
        "name": "cut_path",
        "label": "Cut a New Path",
        "description": "Use machetes to clear faster routes.",
        "condition": { "resource": "machetes", "operator": ">=", "value": "1" },
        "effects": [
          { "resource": "distance", "operation": "+", "value": "random(2,4)" },
          { "resource": "machetes", "operation": "-", "value": "random(0,1)" },
          { "resource": "supplies", "operation": "-", "value": "1" }
        ]
      },
      {
        "name": "forage",
        "label": "Forage for Food",
        "description": "Search the jungle for edible plants.",
        "effects": [
          { "resource": "supplies", "operation": "+", "value": "random(1,4)" },
          { "resource": "health", "operation": "-", "value": "random(0,3)" }
        ]
      },
      {
        "name": "rest",
        "label": "Make Camp",
        "description": "Set up camp and rest.",
        "effects": [
          { "resource": "health", "operation": "+", "value": "10" },
          { "resource": "morale", "operation": "+", "value": "1" },
          { "resource": "supplies", "operation": "-", "value": "2" }
        ]
      }
    ],
    "river_crossing": [
      {
        "name": "swim",
        "label": "Swim Across",
        "description": "Wade and swim through the current.",
        "effects": [
          { "resource": "health", "operation": "-", "value": "random(5,15)" },
          { "resource": "supplies", "operation": "-", "value": "random(1,3)" },
          { "resource": "distance", "operation": "+", "value": "2" }
        ],
        "transition": "trail"
      },
      {
        "name": "build_raft",
        "label": "Build a Raft",
        "description": "Construct a makeshift raft from logs.",
        "condition": { "resource": "machetes", "operator": ">=", "value": "1" },
        "effects": [
          { "resource": "supplies", "operation": "-", "value": "2" },
          { "resource": "distance", "operation": "+", "value": "3" }
        ],
        "transition": "trail"
      },
      {
        "name": "find_ford",
        "label": "Search for Shallow Crossing",
        "description": "Walk along the bank looking for a safer spot.",
        "effects": [
          { "resource": "supplies", "operation": "-", "value": "1" },
          { "resource": "distance", "operation": "+", "value": "1" }
        ],
        "transition": "trail"
      }
    ],
    "ruins": [
      {
        "name": "study",
        "label": "Study Carvings",
        "description": "Decipher the ancient writing on the walls.",
        "effects": [
          { "resource": "knowledge", "operation": "+", "value": "random(2,4)" },
          { "resource": "supplies", "operation": "-", "value": "1" }
        ]
      },
      {
        "name": "excavate",
        "label": "Excavate",
        "description": "Dig carefully around the structure.",
        "effects": [
          { "resource": "artifacts", "operation": "+", "value": "random(1,3)" },
          { "resource": "health", "operation": "-", "value": "random(0,5)" },
          { "resource": "supplies", "operation": "-", "value": "2" }
        ]
      },
      {
        "name": "continue",
        "label": "Continue Journey",
        "description": "Leave the ruins behind.",
        "effects": [{ "resource": "distance", "operation": "+", "value": "1" }],
        "transition": "trail"
      }
    ],
    "wildlife_encounter": [
      {
        "name": "stay_still",
        "label": "Stay Still",
        "description": "Freeze and wait for it to pass.",
        "effects": [
          { "resource": "morale", "operation": "-", "value": "1" },
          { "resource": "health", "operation": "-", "value": "random(0,5)" }
        ],
        "transition": "trail"
      },
      {
        "name": "scare_off",
        "label": "Scare It Away",
        "description": "Make noise to drive the animal away.",
        "effects": [
          { "resource": "health", "operation": "-", "value": "random(0,10)" },
          { "resource": "morale", "operation": "+", "value": "1" }
        ],
        "transition": "trail"
      },
      {
        "name": "observe",
        "label": "Observe It",
        "description": "Document the creature for science.",
        "effects": [
          { "resource": "knowledge", "operation": "+", "value": "random(1,3)" },
          { "resource": "health", "operation": "-", "value": "random(0,8)" }
        ],
        "transition": "trail"
      }
    ],
    "temple_entrance": [
      {
        "name": "enter_temple",
        "label": "Enter Temple",
        "description": "Step inside the ancient structure.",
        "condition": { "resource": "knowledge", "operator": ">=", "value": "5" },
        "effects": [{ "resource": "morale", "operation": "+", "value": "2" }],
        "transition": "temple_interior"
      },
      {
        "name": "examine_exterior",
        "label": "Study the Exterior",
        "description": "Examine the temple from outside first.",
        "effects": [
          { "resource": "knowledge", "operation": "+", "value": "random(1,3)" },
          { "resource": "artifacts", "operation": "+", "value": "random(0,1)" }
        ]
      }
    ],
    "temple_interior": [
      {
        "name": "explore_deeper",
        "label": "Go Deeper",
        "description": "Venture further into the temple.",
        "effects": [
          { "resource": "artifacts", "operation": "+", "value": "random(2,6)" },
          { "resource": "health", "operation": "-", "value": "random(5,15)" },
          { "resource": "knowledge", "operation": "+", "value": "random(1,3)" }
        ]
      },
      {
        "name": "decode_murals",
        "label": "Decode Murals",
        "description": "Translate the murals on the chamber walls.",
        "effects": [
          { "resource": "knowledge", "operation": "+", "value": "random(2,5)" },
          { "resource": "artifacts", "operation": "+", "value": "random(1,2)" }
        ]
      },
      {
        "name": "take_central_artifact",
        "label": "Take the Central Artifact",
        "description": "Claim the grand treasure of the temple.",
        "condition": { "resource": "knowledge", "operator": ">=", "value": "10" },
        "effects": [
          { "resource": "artifacts", "operation": "+", "value": "10" },
          { "resource": "health", "operation": "-", "value": "random(10,20)" }
        ]
      }
    ]
  },
  "transitions": [
    {
      "from": "trail",
      "to": "river_crossing",
      "condition": { "resource": "distance", "operator": ">=", "value": "5" },
      "auto": false
    },
    {
      "from": "trail",
      "to": "ruins",
      "condition": { "resource": "distance", "operator": ">=", "value": "8" },
      "auto": false
    },
    {
      "from": "trail",
      "to": "wildlife_encounter",
      "condition": { "resource": "distance", "operator": ">=", "value": "3" },
      "auto": false
    },
    {
      "from": "trail",
      "to": "temple_entrance",
      "condition": { "resource": "distance", "operator": ">=", "value": "15" },
      "auto": true
    }
  ],
  "winCondition": { "resource": "artifacts", "operator": ">=", "value": "25" },
  "loseCondition": {
    "or": [
      { "resource": "health", "operator": "<=", "value": "0" },
      { "resource": "morale", "operator": "<=", "value": "0" }
    ]
  },
  "theme": {
    "palette": "tropical-green",
    "stateDescriptions": {
      "base_camp": { "label": "Base Camp", "icon": "tent" },
      "trail": { "label": "Jungle Trail", "icon": "tree" },
      "river_crossing": { "label": "River Crossing", "icon": "droplet" },
      "ruins": { "label": "Ancient Ruins", "icon": "landmark" },
      "wildlife_encounter": { "label": "Wildlife!", "icon": "paw" },
      "temple_entrance": { "label": "The Lost Temple", "icon": "columns" },
      "temple_interior": { "label": "Temple Interior", "icon": "gem" }
    },
    "resourceIcons": {
      "health": "heart",
      "supplies": "package",
      "machetes": "sword",
      "artifacts": "award",
      "knowledge": "book",
      "distance": "map-pin",
      "morale": "smile"
    }
  }
}
