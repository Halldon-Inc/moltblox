{
  "name": "Social Media Manager",
  "description": "Build a brand's social media presence. Create content, engage followers, and go viral while avoiding PR disasters.",
  "states": [
    {
      "name": "dashboard",
      "description": "Your social media management dashboard.",
      "onEnter": []
    },
    {
      "name": "content_studio",
      "description": "Creating posts, stories, and reels.",
      "onEnter": []
    },
    { "name": "analytics", "description": "Reviewing engagement metrics.", "onEnter": [] },
    { "name": "community", "description": "Engaging with your audience.", "onEnter": [] },
    {
      "name": "viral_moment",
      "description": "Something you posted is going viral!",
      "onEnter": [{ "resource": "followers", "operation": "+", "value": "random(50,150)" }]
    },
    {
      "name": "pr_crisis",
      "description": "A PR crisis is unfolding online.",
      "onEnter": [{ "resource": "reputation", "operation": "-", "value": "random(5,10)" }]
    }
  ],
  "initialState": "dashboard",
  "resources": {
    "followers": { "initial": 500, "min": 0, "label": "Followers" },
    "engagement": { "initial": 20, "min": 0, "max": 100, "label": "Engagement Rate" },
    "content_quality": { "initial": 5, "min": 0, "max": 15, "label": "Content Quality" },
    "reputation": { "initial": 50, "min": 0, "max": 100, "label": "Brand Reputation" },
    "budget": { "initial": 200, "min": 0, "label": "Ad Budget" },
    "creativity": { "initial": 6, "min": 0, "max": 10, "label": "Creativity" }
  },
  "actions": {
    "dashboard": [
      {
        "name": "go_content",
        "label": "Create Content",
        "effects": [],
        "transition": "content_studio"
      },
      {
        "name": "go_analytics",
        "label": "Check Analytics",
        "effects": [],
        "transition": "analytics"
      },
      {
        "name": "go_community",
        "label": "Engage Community",
        "effects": [],
        "transition": "community"
      },
      {
        "name": "run_ads",
        "label": "Run Ad Campaign",
        "condition": { "resource": "budget", "operator": ">=", "value": "30" },
        "effects": [
          { "resource": "budget", "operation": "-", "value": "30" },
          { "resource": "followers", "operation": "+", "value": "random(30,80)" },
          { "resource": "engagement", "operation": "+", "value": "random(3,8)" }
        ]
      },
      {
        "name": "collaborate",
        "label": "Brand Collaboration",
        "condition": { "resource": "reputation", "operator": ">=", "value": "40" },
        "effects": [
          { "resource": "followers", "operation": "+", "value": "random(40,100)" },
          { "resource": "reputation", "operation": "+", "value": "random(3,6)" },
          { "resource": "budget", "operation": "+", "value": "random(15,30)" }
        ]
      }
    ],
    "content_studio": [
      {
        "name": "write_post",
        "label": "Write Engaging Post",
        "effects": [
          { "resource": "content_quality", "operation": "+", "value": "random(1,3)" },
          { "resource": "engagement", "operation": "+", "value": "random(2,5)" },
          { "resource": "creativity", "operation": "-", "value": "1" }
        ]
      },
      {
        "name": "create_reel",
        "label": "Create Short Video",
        "condition": { "resource": "creativity", "operator": ">=", "value": "3" },
        "effects": [
          { "resource": "content_quality", "operation": "+", "value": "random(2,5)" },
          { "resource": "engagement", "operation": "+", "value": "random(5,10)" },
          { "resource": "creativity", "operation": "-", "value": "2" },
          { "resource": "followers", "operation": "+", "value": "random(10,30)" }
        ]
      },
      {
        "name": "meme",
        "label": "Make a Meme",
        "effects": [
          { "resource": "engagement", "operation": "+", "value": "random(5,12)" },
          { "resource": "creativity", "operation": "-", "value": "1" },
          { "resource": "reputation", "operation": "+", "value": "random(-2,3)" }
        ]
      },
      { "name": "back", "label": "Back to Dashboard", "effects": [], "transition": "dashboard" }
    ],
    "analytics": [
      {
        "name": "analyze_trends",
        "label": "Analyze Trends",
        "effects": [
          { "resource": "content_quality", "operation": "+", "value": "random(1,3)" },
          { "resource": "creativity", "operation": "+", "value": "random(1,2)" }
        ]
      },
      {
        "name": "optimize",
        "label": "Optimize Strategy",
        "effects": [{ "resource": "engagement", "operation": "+", "value": "random(3,6)" }]
      },
      { "name": "back", "label": "Back to Dashboard", "effects": [], "transition": "dashboard" }
    ],
    "community": [
      {
        "name": "reply_comments",
        "label": "Reply to Comments",
        "effects": [
          { "resource": "engagement", "operation": "+", "value": "random(3,6)" },
          { "resource": "reputation", "operation": "+", "value": "random(1,3)" }
        ]
      },
      {
        "name": "host_qa",
        "label": "Host Q&A",
        "effects": [
          { "resource": "engagement", "operation": "+", "value": "random(5,10)" },
          { "resource": "followers", "operation": "+", "value": "random(10,25)" },
          { "resource": "creativity", "operation": "-", "value": "1" }
        ]
      },
      {
        "name": "giveaway",
        "label": "Run Giveaway",
        "condition": { "resource": "budget", "operator": ">=", "value": "20" },
        "effects": [
          { "resource": "budget", "operation": "-", "value": "20" },
          { "resource": "followers", "operation": "+", "value": "random(40,80)" },
          { "resource": "engagement", "operation": "+", "value": "random(5,10)" }
        ]
      },
      { "name": "back", "label": "Back to Dashboard", "effects": [], "transition": "dashboard" }
    ],
    "viral_moment": [
      {
        "name": "ride_wave",
        "label": "Ride the Wave",
        "effects": [
          { "resource": "followers", "operation": "+", "value": "random(100,300)" },
          { "resource": "engagement", "operation": "+", "value": "random(10,20)" },
          { "resource": "reputation", "operation": "+", "value": "random(5,10)" }
        ],
        "transition": "dashboard"
      },
      {
        "name": "capitalize",
        "label": "Capitalize with More Content",
        "condition": { "resource": "creativity", "operator": ">=", "value": "3" },
        "effects": [
          { "resource": "followers", "operation": "+", "value": "random(150,400)" },
          { "resource": "creativity", "operation": "-", "value": "2" },
          { "resource": "engagement", "operation": "+", "value": "random(8,15)" }
        ],
        "transition": "dashboard"
      }
    ],
    "pr_crisis": [
      {
        "name": "apologize",
        "label": "Issue Apology",
        "effects": [
          { "resource": "reputation", "operation": "+", "value": "random(3,8)" },
          { "resource": "engagement", "operation": "-", "value": "random(3,6)" }
        ],
        "transition": "dashboard"
      },
      {
        "name": "go_silent",
        "label": "Go Silent",
        "effects": [
          { "resource": "reputation", "operation": "-", "value": "random(3,6)" },
          { "resource": "engagement", "operation": "-", "value": "random(5,10)" }
        ],
        "transition": "dashboard"
      },
      {
        "name": "address_head_on",
        "label": "Address Head On",
        "condition": { "resource": "reputation", "operator": ">=", "value": "30" },
        "effects": [
          { "resource": "reputation", "operation": "+", "value": "random(5,12)" },
          { "resource": "engagement", "operation": "+", "value": "random(3,8)" }
        ],
        "transition": "dashboard"
      }
    ]
  },
  "transitions": [
    {
      "from": "content_studio",
      "to": "viral_moment",
      "condition": { "resource": "content_quality", "operator": ">=", "value": "12" },
      "auto": false
    },
    {
      "from": "community",
      "to": "pr_crisis",
      "condition": { "resource": "reputation", "operator": "<=", "value": "20" },
      "auto": true
    }
  ],
  "perTurnEffects": [
    { "resource": "creativity", "operation": "+", "value": "1" },
    { "resource": "engagement", "operation": "-", "value": "2" }
  ],
  "winCondition": {
    "and": [
      { "resource": "followers", "operator": ">=", "value": "5000" },
      { "resource": "reputation", "operator": ">=", "value": "70" }
    ]
  },
  "loseCondition": { "resource": "reputation", "operator": "<=", "value": "0" },
  "theme": {
    "palette": "digital-purple",
    "stateDescriptions": {
      "dashboard": { "label": "Dashboard", "icon": "monitor" },
      "content_studio": { "label": "Content Studio", "icon": "edit" },
      "analytics": { "label": "Analytics", "icon": "bar-chart" },
      "community": { "label": "Community", "icon": "users" },
      "viral_moment": { "label": "Going Viral!", "icon": "trending-up" },
      "pr_crisis": { "label": "PR Crisis!", "icon": "alert-triangle" }
    },
    "resourceIcons": {
      "followers": "users",
      "engagement": "heart",
      "content_quality": "star",
      "reputation": "shield",
      "budget": "dollar",
      "creativity": "edit"
    }
  }
}
