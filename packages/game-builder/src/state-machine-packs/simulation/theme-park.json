{
  "name": "Theme Park Tycoon",
  "description": "Design and manage a theme park. Build rides, manage queues, and create the ultimate entertainment destination.",
  "states": [
    {
      "name": "park_entrance",
      "description": "The main gate. Guests stream in.",
      "onEnter": [{ "resource": "guests", "operation": "+", "value": "random(10,30)" }]
    },
    {
      "name": "ride_zone",
      "description": "The area with thrill rides and attractions.",
      "onEnter": []
    },
    { "name": "food_court", "description": "Restaurants and snack stands.", "onEnter": [] },
    { "name": "construction", "description": "Building new attractions.", "onEnter": [] },
    { "name": "maintenance", "description": "Keeping rides safe and operational.", "onEnter": [] },
    {
      "name": "accident",
      "description": "Something went wrong at the park!",
      "onEnter": [{ "resource": "reputation", "operation": "-", "value": "5" }]
    }
  ],
  "initialState": "park_entrance",
  "resources": {
    "money": { "initial": 500, "min": 0, "label": "Money" },
    "guests": { "initial": 50, "min": 0, "label": "Guests" },
    "rides": { "initial": 2, "min": 0, "max": 15, "label": "Rides" },
    "satisfaction": { "initial": 60, "min": 0, "max": 100, "label": "Guest Satisfaction" },
    "reputation": { "initial": 40, "min": 0, "max": 100, "label": "Park Reputation" },
    "safety": { "initial": 80, "min": 0, "max": 100, "label": "Safety Rating" },
    "staff": { "initial": 5, "min": 1, "max": 20, "label": "Staff" }
  },
  "actions": {
    "park_entrance": [
      {
        "name": "collect_tickets",
        "label": "Sell Tickets",
        "description": "Collect admission fees from guests.",
        "effects": [{ "resource": "money", "operation": "+", "value": "random(20,60)" }]
      },
      {
        "name": "go_rides",
        "label": "Visit Ride Zone",
        "description": "Check on the attractions.",
        "effects": [],
        "transition": "ride_zone"
      },
      {
        "name": "go_food",
        "label": "Visit Food Court",
        "description": "Check on dining operations.",
        "effects": [],
        "transition": "food_court"
      },
      {
        "name": "go_construction",
        "label": "Build New Rides",
        "description": "Expand the park.",
        "effects": [],
        "transition": "construction"
      },
      {
        "name": "go_maintenance",
        "label": "Maintenance Check",
        "description": "Inspect ride safety.",
        "effects": [],
        "transition": "maintenance"
      }
    ],
    "ride_zone": [
      {
        "name": "open_ride",
        "label": "Open All Rides",
        "description": "Ensure all rides are running.",
        "effects": [
          { "resource": "satisfaction", "operation": "+", "value": "random(3,8)" },
          { "resource": "money", "operation": "+", "value": "random(10,30)" },
          { "resource": "safety", "operation": "-", "value": "random(1,3)" }
        ]
      },
      {
        "name": "vip_experience",
        "label": "VIP Experience",
        "description": "Offer premium ride access.",
        "effects": [
          { "resource": "money", "operation": "+", "value": "random(15,40)" },
          { "resource": "satisfaction", "operation": "+", "value": "random(2,5)" }
        ]
      },
      {
        "name": "back",
        "label": "Back to Entrance",
        "effects": [],
        "transition": "park_entrance"
      }
    ],
    "food_court": [
      {
        "name": "add_vendor",
        "label": "Add Food Vendor",
        "description": "Open a new food stall.",
        "condition": { "resource": "money", "operator": ">=", "value": "30" },
        "effects": [
          { "resource": "money", "operation": "-", "value": "30" },
          { "resource": "satisfaction", "operation": "+", "value": "random(3,6)" },
          { "resource": "money", "operation": "+", "value": "random(10,20)" }
        ]
      },
      {
        "name": "sell_merchandise",
        "label": "Sell Merchandise",
        "description": "Push park-branded items.",
        "effects": [{ "resource": "money", "operation": "+", "value": "random(10,25)" }]
      },
      {
        "name": "back",
        "label": "Back to Entrance",
        "effects": [],
        "transition": "park_entrance"
      }
    ],
    "construction": [
      {
        "name": "build_coaster",
        "label": "Build Roller Coaster",
        "description": "Construct a thrilling new coaster.",
        "condition": { "resource": "money", "operator": ">=", "value": "150" },
        "effects": [
          { "resource": "money", "operation": "-", "value": "150" },
          { "resource": "rides", "operation": "+", "value": "1" },
          { "resource": "reputation", "operation": "+", "value": "random(8,15)" },
          { "resource": "guests", "operation": "+", "value": "random(20,40)" }
        ]
      },
      {
        "name": "build_family",
        "label": "Build Family Ride",
        "description": "Add a ride for all ages.",
        "condition": { "resource": "money", "operator": ">=", "value": "70" },
        "effects": [
          { "resource": "money", "operation": "-", "value": "70" },
          { "resource": "rides", "operation": "+", "value": "1" },
          { "resource": "satisfaction", "operation": "+", "value": "random(5,10)" },
          { "resource": "guests", "operation": "+", "value": "random(10,25)" }
        ]
      },
      {
        "name": "build_show",
        "label": "Build Show Theater",
        "description": "Create a live entertainment venue.",
        "condition": { "resource": "money", "operator": ">=", "value": "60" },
        "effects": [
          { "resource": "money", "operation": "-", "value": "60" },
          { "resource": "satisfaction", "operation": "+", "value": "random(5,10)" },
          { "resource": "reputation", "operation": "+", "value": "random(3,6)" }
        ]
      },
      {
        "name": "back",
        "label": "Back to Entrance",
        "effects": [],
        "transition": "park_entrance"
      }
    ],
    "maintenance": [
      {
        "name": "inspect_rides",
        "label": "Full Inspection",
        "description": "Thorough safety check on all rides.",
        "condition": { "resource": "money", "operator": ">=", "value": "20" },
        "effects": [
          { "resource": "money", "operation": "-", "value": "20" },
          { "resource": "safety", "operation": "+", "value": "random(8,15)" }
        ]
      },
      {
        "name": "repair",
        "label": "Repair Rides",
        "description": "Fix worn components.",
        "condition": { "resource": "money", "operator": ">=", "value": "30" },
        "effects": [
          { "resource": "money", "operation": "-", "value": "30" },
          { "resource": "safety", "operation": "+", "value": "random(10,20)" }
        ]
      },
      {
        "name": "hire_staff",
        "label": "Hire Maintenance Staff",
        "description": "Add more maintenance workers.",
        "condition": { "resource": "money", "operator": ">=", "value": "25" },
        "effects": [
          { "resource": "money", "operation": "-", "value": "25" },
          { "resource": "staff", "operation": "+", "value": "1" },
          { "resource": "safety", "operation": "+", "value": "3" }
        ]
      },
      {
        "name": "back",
        "label": "Back to Entrance",
        "effects": [],
        "transition": "park_entrance"
      }
    ],
    "accident": [
      {
        "name": "respond_fast",
        "label": "Rapid Response",
        "description": "Send emergency teams immediately.",
        "condition": { "resource": "staff", "operator": ">=", "value": "5" },
        "effects": [
          { "resource": "money", "operation": "-", "value": "random(30,60)" },
          { "resource": "reputation", "operation": "-", "value": "random(3,8)" },
          { "resource": "safety", "operation": "+", "value": "5" }
        ],
        "transition": "park_entrance"
      },
      {
        "name": "close_ride",
        "label": "Close Affected Ride",
        "description": "Shut down the ride indefinitely.",
        "effects": [
          { "resource": "rides", "operation": "-", "value": "1" },
          { "resource": "reputation", "operation": "-", "value": "random(5,10)" },
          { "resource": "safety", "operation": "+", "value": "10" }
        ],
        "transition": "park_entrance"
      }
    ]
  },
  "transitions": [
    {
      "from": "ride_zone",
      "to": "accident",
      "condition": { "resource": "safety", "operator": "<=", "value": "30" },
      "auto": true
    }
  ],
  "perTurnEffects": [
    { "resource": "safety", "operation": "-", "value": "2" },
    { "resource": "money", "operation": "-", "value": "10" }
  ],
  "winCondition": {
    "and": [
      { "resource": "reputation", "operator": ">=", "value": "90" },
      { "resource": "rides", "operator": ">=", "value": "10" }
    ]
  },
  "loseCondition": {
    "or": [
      { "resource": "money", "operator": "<=", "value": "0" },
      { "resource": "safety", "operator": "<=", "value": "0" }
    ]
  },
  "theme": {
    "palette": "carnival",
    "stateDescriptions": {
      "park_entrance": { "label": "Main Gate", "icon": "star" },
      "ride_zone": { "label": "Ride Zone", "icon": "zap" },
      "food_court": { "label": "Food Court", "icon": "coffee" },
      "construction": { "label": "Construction", "icon": "tool" },
      "maintenance": { "label": "Maintenance", "icon": "settings" },
      "accident": { "label": "Accident!", "icon": "alert-triangle" }
    },
    "resourceIcons": {
      "money": "dollar",
      "guests": "users",
      "rides": "star",
      "satisfaction": "smile",
      "reputation": "award",
      "safety": "shield",
      "staff": "user"
    }
  }
}
