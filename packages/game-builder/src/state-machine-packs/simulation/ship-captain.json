{
  "name": "Ship Captain",
  "description": "Captain a cargo ship across trade routes. Navigate weather, manage crew, and deliver goods on schedule to build your shipping line.",
  "states": [
    {
      "name": "bridge",
      "description": "The ship's bridge. Command operations from here.",
      "onEnter": []
    },
    {
      "name": "port",
      "description": "A busy commercial port. Load and unload cargo.",
      "onEnter": []
    },
    {
      "name": "open_ocean",
      "description": "Cruising through international waters.",
      "onEnter": [{ "resource": "fuel", "operation": "-", "value": "3" }]
    },
    { "name": "engine_room", "description": "The ship's mechanical heart.", "onEnter": [] },
    {
      "name": "rough_seas",
      "description": "Heavy swells and strong winds.",
      "onEnter": [{ "resource": "crew_morale", "operation": "-", "value": "2" }]
    },
    { "name": "customs", "description": "Port authority inspection.", "onEnter": [] }
  ],
  "initialState": "port",
  "resources": {
    "money": { "initial": 200, "min": 0, "label": "Money" },
    "cargo": { "initial": 0, "min": 0, "max": 30, "label": "Cargo Tons" },
    "fuel": { "initial": 50, "min": 0, "max": 80, "label": "Fuel" },
    "crew": { "initial": 12, "min": 3, "max": 25, "label": "Crew" },
    "crew_morale": { "initial": 7, "min": 0, "max": 10, "label": "Crew Morale" },
    "ship_condition": { "initial": 80, "min": 0, "max": 100, "label": "Ship Condition" },
    "deliveries": { "initial": 0, "min": 0, "label": "Deliveries Made" }
  },
  "actions": {
    "bridge": [
      {
        "name": "set_course",
        "label": "Set Course",
        "description": "Chart a heading for the next port.",
        "condition": { "resource": "fuel", "operator": ">=", "value": "10" },
        "effects": [{ "resource": "fuel", "operation": "-", "value": "2" }],
        "transition": "open_ocean"
      },
      {
        "name": "check_engine",
        "label": "Check Engine Room",
        "description": "Inspect the engines.",
        "effects": [],
        "transition": "engine_room"
      },
      {
        "name": "radio_port",
        "label": "Radio Ahead to Port",
        "description": "Arrange docking and unloading.",
        "effects": [{ "resource": "money", "operation": "-", "value": "2" }]
      }
    ],
    "port": [
      {
        "name": "load_cargo",
        "label": "Load Cargo",
        "description": "Take on freight for delivery.",
        "condition": { "resource": "money", "operator": ">=", "value": "20" },
        "effects": [
          { "resource": "cargo", "operation": "+", "value": "random(5,12)" },
          { "resource": "money", "operation": "-", "value": "20" }
        ]
      },
      {
        "name": "deliver_cargo",
        "label": "Deliver Cargo",
        "description": "Unload cargo and collect payment.",
        "condition": { "resource": "cargo", "operator": ">=", "value": "5" },
        "effects": [
          { "resource": "cargo", "operation": "-", "value": "random(5,10)" },
          { "resource": "money", "operation": "+", "value": "random(40,80)" },
          { "resource": "deliveries", "operation": "+", "value": "1" }
        ]
      },
      {
        "name": "refuel",
        "label": "Refuel",
        "description": "Fill up the fuel tanks.",
        "condition": { "resource": "money", "operator": ">=", "value": "25" },
        "effects": [
          { "resource": "fuel", "operation": "+", "value": "random(15,25)" },
          { "resource": "money", "operation": "-", "value": "25" }
        ]
      },
      {
        "name": "repair_ship",
        "label": "Drydock Repairs",
        "description": "Fix hull and engine damage.",
        "condition": { "resource": "money", "operator": ">=", "value": "40" },
        "effects": [
          { "resource": "ship_condition", "operation": "+", "value": "random(15,25)" },
          { "resource": "money", "operation": "-", "value": "40" }
        ]
      },
      {
        "name": "hire_crew",
        "label": "Hire Crew",
        "description": "Recruit new sailors.",
        "condition": { "resource": "money", "operator": ">=", "value": "15" },
        "effects": [
          { "resource": "crew", "operation": "+", "value": "random(2,4)" },
          { "resource": "money", "operation": "-", "value": "15" }
        ]
      },
      {
        "name": "shore_leave",
        "label": "Grant Shore Leave",
        "description": "Let the crew relax in port.",
        "effects": [
          { "resource": "crew_morale", "operation": "+", "value": "random(2,4)" },
          { "resource": "money", "operation": "-", "value": "random(5,10)" }
        ]
      },
      {
        "name": "depart",
        "label": "Set Sail",
        "description": "Leave port and head to the bridge.",
        "condition": { "resource": "fuel", "operator": ">=", "value": "10" },
        "effects": [],
        "transition": "bridge"
      }
    ],
    "open_ocean": [
      {
        "name": "cruise",
        "label": "Cruise Ahead",
        "description": "Maintain current speed and heading.",
        "effects": [
          { "resource": "fuel", "operation": "-", "value": "random(2,5)" },
          { "resource": "ship_condition", "operation": "-", "value": "random(1,2)" }
        ]
      },
      {
        "name": "slow_cruise",
        "label": "Slow Ahead",
        "description": "Conserve fuel at lower speed.",
        "effects": [
          { "resource": "fuel", "operation": "-", "value": "random(1,2)" },
          { "resource": "crew_morale", "operation": "-", "value": "1" }
        ]
      },
      {
        "name": "arrive_port",
        "label": "Arrive at Port",
        "description": "Pull into the next port.",
        "effects": [{ "resource": "fuel", "operation": "-", "value": "3" }],
        "transition": "customs"
      }
    ],
    "engine_room": [
      {
        "name": "routine_maintenance",
        "label": "Routine Maintenance",
        "description": "Standard upkeep on the engines.",
        "effects": [
          { "resource": "ship_condition", "operation": "+", "value": "random(3,8)" },
          { "resource": "fuel", "operation": "-", "value": "1" }
        ]
      },
      {
        "name": "boost_engines",
        "label": "Boost Engines",
        "description": "Increase speed at the cost of wear.",
        "effects": [
          { "resource": "ship_condition", "operation": "-", "value": "random(3,6)" },
          { "resource": "fuel", "operation": "-", "value": "random(2,4)" }
        ]
      },
      {
        "name": "back_bridge",
        "label": "Back to Bridge",
        "effects": [],
        "transition": "bridge"
      }
    ],
    "rough_seas": [
      {
        "name": "ride_out",
        "label": "Ride It Out",
        "description": "Batten down and endure the storm.",
        "effects": [
          { "resource": "ship_condition", "operation": "-", "value": "random(5,12)" },
          { "resource": "crew_morale", "operation": "-", "value": "random(1,3)" },
          { "resource": "cargo", "operation": "-", "value": "random(0,2)" }
        ],
        "transition": "open_ocean"
      },
      {
        "name": "change_course",
        "label": "Change Course",
        "description": "Go around the storm.",
        "effects": [
          { "resource": "fuel", "operation": "-", "value": "random(5,10)" },
          { "resource": "ship_condition", "operation": "-", "value": "random(2,5)" }
        ],
        "transition": "open_ocean"
      }
    ],
    "customs": [
      {
        "name": "declare",
        "label": "Declare Cargo",
        "description": "Submit paperwork to port authorities.",
        "effects": [{ "resource": "money", "operation": "-", "value": "random(5,10)" }],
        "transition": "port"
      },
      {
        "name": "expedite",
        "label": "Expedite Clearance",
        "description": "Pay extra for faster processing.",
        "condition": { "resource": "money", "operator": ">=", "value": "15" },
        "effects": [{ "resource": "money", "operation": "-", "value": "15" }],
        "transition": "port"
      }
    ]
  },
  "transitions": [
    {
      "from": "open_ocean",
      "to": "rough_seas",
      "condition": { "resource": "ship_condition", "operator": "<=", "value": "40" },
      "auto": false
    }
  ],
  "perTurnEffects": [{ "resource": "fuel", "operation": "-", "value": "1" }],
  "winCondition": { "resource": "deliveries", "operator": ">=", "value": "10" },
  "loseCondition": {
    "or": [
      { "resource": "fuel", "operator": "<=", "value": "0" },
      { "resource": "ship_condition", "operator": "<=", "value": "0" },
      { "resource": "crew_morale", "operator": "<=", "value": "0" }
    ]
  },
  "theme": {
    "palette": "nautical-blue",
    "stateDescriptions": {
      "bridge": { "label": "Ship Bridge", "icon": "compass" },
      "port": { "label": "Port", "icon": "anchor" },
      "open_ocean": { "label": "Open Ocean", "icon": "navigation" },
      "engine_room": { "label": "Engine Room", "icon": "settings" },
      "rough_seas": { "label": "Rough Seas!", "icon": "cloud-rain" },
      "customs": { "label": "Customs", "icon": "clipboard" }
    },
    "resourceIcons": {
      "money": "dollar",
      "cargo": "box",
      "fuel": "battery",
      "crew": "users",
      "crew_morale": "smile",
      "ship_condition": "shield",
      "deliveries": "check-circle"
    }
  }
}
